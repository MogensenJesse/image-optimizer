{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Image Optimizer",
  "version": "0.4.0",
  "identifier": "com.image-optimizer.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "image-optimizer",
        "width": 960,
        "height": 720,
        "transparent": true,
        "decorations": false,
        "dragDropEnabled": true,
        "windowEffects": {
          "effects": [
            "acrylic"
          ],
          "radius": 10
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "externalBin": [
      "binaries/sharp-sidecar"
    ],
    "active": true,
    "targets": "all",
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDdFODg4MTBBM0MxNDdEQzMKUldURGZSUThDb0dJZnMzeEM1SXB3V0xiZUhVVWNLUmovSEJ6YTM4czIzWFJrY3FnVlNWU3A5RTUK",
      "endpoints": [
        "https://github.com/MogensenJesse/image-optimizer/releases/latest/download/latest.json"
      ]
    }
  }
}
