{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Image Optimizer",
  "version": "0.1.0",
  "identifier": "com.image-optimizer.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "image-optimizer",
        "width": 800,
        "height": 600,
        "transparent": true,
        "decorations": false,
        "dragDropEnabled": true,
        "windowEffects": {
          "effects": ["acrylic"],
          "radius": 10
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "externalBin": ["binaries/sharp-sidecar"],
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
