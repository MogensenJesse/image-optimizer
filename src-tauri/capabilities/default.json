{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:window:allow-start-dragging",
    "core:window:allow-minimize",
    "core:window:allow-close",
    "dialog:allow-open",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    "fs:allow-read",
    "core:event:default",
    "core:path:default",
    "fs:allow-mkdir",
    "process:default",
    "fs:default",
    "dialog:default",
    "updater:default",
    "store:default"
  ]
}
