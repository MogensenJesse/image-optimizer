{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/sharp-sidecar",
          "sidecar": true,
          "args": [
            "optimize",
            {
              "validator": "\\S+"
            },
            {
              "validator": "\\S+"
            },
            {
              "validator": ".*"
            }
          ]
        }
      ]
    },
    "shell:allow-kill",
    "shell:allow-open",
    "shell:allow-spawn",
    "shell:allow-stdin-write",
    "dialog:allow-open",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    "fs:allow-read",
    "core:event:default",
    "core:path:default",
    "fs:allow-mkdir",
    "process:default",
    "shell:default",
    "fs:default",
    "dialog:default"
  ]
}
