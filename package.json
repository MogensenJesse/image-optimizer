{
  "name": "image-optimizer",
  "private": true,
  "version": "0.4.0",
  "type": "module",
  "scripts": {
    "dev": "npm run build:sharp && vite",
    "build": "npm run build:sharp && vite build",
    "preview": "vite preview",
    "build:sharp": "cd sharp-sidecar && npm run build:rename",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "postinstall": "cd sharp-sidecar && npm install",
    "lint": "biome format --write . && biome check . && npm run lint:rust",
    "lint:fix": "biome format --write . && biome check --write . && npm run lint:rust",
    "lint:rust": "cargo clippy --manifest-path src-tauri/Cargo.toml --all-targets -- -D warnings",
    "format": "biome format --write .",
    "version": "node scripts/sync-version.js && git add src-tauri/Cargo.toml src-tauri/tauri.conf.json",
    "version:sync": "node scripts/sync-version.js",
    "sync": "npm run lint:fix && npm run version:sync"
  },
  "dependencies": {
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-dialog": "^2",
    "@tauri-apps/plugin-fs": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-os": "^2",
    "@tauri-apps/plugin-process": "^2",
    "@tauri-apps/plugin-shell": "^2",
    "@tauri-apps/plugin-store": "^2",
    "@tauri-apps/plugin-updater": "^2",
    "react": "^19.2",
    "react-dom": "^19.2",
    "sass": "^1"
  },
  "devDependencies": {
    "@biomejs/biome": "2",
    "@tauri-apps/cli": "^2",
    "@vitejs/plugin-react": "^5",
    "cross-env": "^10",
    "vite": "^7"
  }
}
